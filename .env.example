# MnemoGraph Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# LLM Provider Configuration
# ============================================
# Provider: ollama or openai
MNEMO_LLM_PROVIDER=ollama
MNEMO_LLM_MODEL=llama3.1:8b
MNEMO_LLM_BASE_URL=http://localhost:11434
# MNEMO_LLM_API_KEY=sk-...  # Required for OpenAI
MNEMO_LLM_TEMPERATURE=0.0
MNEMO_LLM_MAX_TOKENS=2000
MNEMO_LLM_TIMEOUT=120.0

# ============================================
# Embedder Configuration
# ============================================
MNEMO_EMBEDDER_PROVIDER=ollama
MNEMO_EMBEDDER_MODEL=nomic-embed-text
MNEMO_EMBEDDER_BASE_URL=http://localhost:11434
# MNEMO_EMBEDDER_API_KEY=sk-...  # Required for OpenAI
# MNEMO_EMBEDDER_DIMENSION=768  # Optional, auto-detected if not set

# ============================================
# Graph Store Configuration
# ============================================
# Backend: neo4j
MNEMO_GRAPH_BACKEND=neo4j

# Neo4j settings
MNEMO_NEO4J_URI=bolt://localhost:7687
MNEMO_NEO4J_USERNAME=neo4j
MNEMO_NEO4J_PASSWORD=password
MNEMO_NEO4J_DATABASE=neo4j

# ============================================
# Vector Store Configuration (Qdrant)
# ============================================
MNEMO_QDRANT_URL=http://localhost:6333
MNEMO_QDRANT_COLLECTION=memories
MNEMO_QDRANT_USE_GRPC=true
MNEMO_QDRANT_HNSW_M=16
MNEMO_QDRANT_HNSW_EF_CONSTRUCT=100
MNEMO_QDRANT_USE_QUANTIZATION=true
MNEMO_QDRANT_QUANTIZATION_TYPE=int8
MNEMO_QDRANT_ON_DISK=false

# ============================================
# Debug and Logging
# ============================================
MNEMO_DEBUG=false
MNEMO_LOG_LEVEL=INFO
